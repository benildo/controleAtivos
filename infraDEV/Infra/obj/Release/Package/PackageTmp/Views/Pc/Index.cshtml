@model IEnumerable<Infra.Models.Pc>

@{
    ViewBag.Title = "Index";
}

<h2>Computadores</h2>

<p>
    @Html.ActionLink("Adicionar", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            Responsável
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModPc.Modelo)
        </th>
        <th>
            Nome
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Série)
        </th>              
        <th>
            Plaqueta
        </th>        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Funcionario.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModPc.Modelo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomePc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Série)
        </td>       
        <td>
            @Html.DisplayFor(modelItem => item.Plaqueta.PlaquetaID)
        </td>       
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.PcID }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.PcID }) |
            @Html.ActionLink("Apagar", "Delete", new { id = item.PcID })
        </td>
    </tr>
}

</table>
