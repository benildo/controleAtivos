@model IEnumerable<Infra.Models.ModCftv>

@{
    ViewBag.Title = "Index";
}

<h2>Modelos Cftv</h2>

<p>
    @Html.ActionLink("Adicionar", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modelo)
        </th>
        <th>
            Fabricante
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modelo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fabricante.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ModCftvID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.ModCftvID }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.ModCftvID })
        </td>
    </tr>
}

</table>
