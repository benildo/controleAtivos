@model IEnumerable<Infra.Models.Window>

@{
    ViewBag.Title = "Index";
}

<h2>Windows</h2>

<p>
    @Html.ActionLink("Adicionar", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Funcionario.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Serial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModSoftware.Modelo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Funcionario.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Serial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModSoftware.Modelo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.WindowsID }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.WindowsID }) |
            @Html.ActionLink("Apagar", "Delete", new { id = item.WindowsID })
        </td>
    </tr>
}

</table>

