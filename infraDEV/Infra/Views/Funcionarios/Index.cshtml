@model IEnumerable<Infra.Models.Funcionario>

@{
    ViewBag.Title = "Index";
}

<h2>Funcionários</h2>

<p>
    @Html.ActionLink("Adicionar", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.Cargo)
        </th>        
        <th>
            Setor
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.Cargo)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.Setor.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.FuncionarioID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.FuncionarioID }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.FuncionarioID })
        </td>
    </tr>
}

</table>
