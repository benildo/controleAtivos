@model IEnumerable<Infra.Models.Cadeira>

@{
    ViewBag.Title = "Index";
}

<h2>Cadeiras</h2>

<p>
    @Html.ActionLink("Adicionar", "Create")
</p>
<table class="table table-hover">
    <tr> 
        <th>
            @Html.DisplayNameFor(model => model.Funcionario.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.ModMovel.Modelo)
        </th>
        <th>
            Plaqueta
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Funcionario.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.ModMovel.Modelo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Plaqueta.PlaquetaID)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CadeiraID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.CadeiraID }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.CadeiraID })
        </td>
    </tr>
}

</table>

